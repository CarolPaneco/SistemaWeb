@model System.Data.DataTable

<h2>Relatório de Vendas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Venda ID</th>
            <th>Cliente</th>
            <th>Data da Venda</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Preço Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["venda_id"]</td>
                <td>@row["cliente"]</td>
                <td>@row["data_venda"]</td>
                <td>@row["produto"]</td>
                <td>@row["quantidade"]</td>
                <td>@row["preco_unitario"]</td>
                <td>@row["preco_total"]</td>
            </tr>
        }
    </tbody>
</table>
